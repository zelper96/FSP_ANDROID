<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="4dp"
    tools:context=".list.ViewListPage">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/list_layuot_title"
        android:layout_marginBottom="4dp"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="빈소안내"
            android:letterSpacing="0.2"
            android:textColor="#ffffff"
            android:fontFamily="@font/text_font"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />


        <TextView
            android:id="@+id/todata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"




            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/text_font"
            android:textSize="20dp"
            android:text="2019년 09월 23일 오전 10:32"
            android:textColor="#fff"
            />

    </android.support.constraint.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0b0b61"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:fontFamily="@font/text_font"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:text="빈 소"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:fontFamily="@font/text_font"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="고 인"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"/>


        <TextView
            android:id="@+id/resident_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp"
            android:fontFamily="@font/text_font"
            android:text="상 주"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"/>


        <TextView
            android:id="@+id/start_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:letterSpacing="0.2"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp"
            android:fontFamily="@font/text_font"
            android:text="입 관 일"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"/>


        <TextView
            android:id="@+id/end_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:letterSpacing="0.2"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp"
            android:fontFamily="@font/text_font"
            android:text="발 인 일"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"/>


        <TextView
            android:id="@+id/zhang_ji"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp"
            android:fontFamily="@font/text_font"
            android:text="장 지"/>


    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>